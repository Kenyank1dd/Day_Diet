<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.diet.Mapper.UserMapper">
    <select id="findAll" resultType="com.example.diet.Domain.User" >
        select * from usr
    </select>

    <select id="findFamilyAllergenbyId" resultType="java.util.Map">
        SELECT
            f.family_id,
            i.ing_name
        FROM
            usr u
                JOIN usr_family uf ON u.usr_id = uf.usr_id
                JOIN fam_allergen fa ON uf.family_id = fa.fam_id
                JOIN ingredient i ON fa.ing_id = i.ing_id
                JOIN usr_family f ON f.family_id = uf.family_id
        WHERE
            u.usr_id = #{usrId}
        ORDER BY
            f.family_id;
    </select>
    <select id="findFamilyMessagebyId" resultType="java.util.Map">
        SELECT
            f.family_id,
            f.sugar_need,
            f.cal_need,
            f.fat_need
        FROM
            usr u,
            usr_family f
        WHERE
            u.usr_id = f.usr_id
          AND u.usr_id = #{usrId}
        ORDER BY
            f.family_id
    </select>

    <select id="RecordWater" parameterType="String" resultType="Integer">
        select water_num from water where usr_id = #{userId}
    </select>
    <select id="GetDayWater" parameterType="String" resultType="String">
        select water_date from water where usr_id = #{userId}
    </select>
    <update id="SetZero" parameterType="String" >
        update water
        <set>
            water_num = 0
        </set>
        where usr_id = #{userId}
    </update>
    <update id="UpdateDayWater">
        update water
        <set>
            water_date = #{today}
        </set>
        where usr_id = #{userId}
    </update>
    <update id="UpdateWater">
        update water
        <set>
            water_num = water_num + #{water_num}
        </set>
        where usr_id = #{userId}
    </update>
    <select id="GetFamily" parameterType="String" resultType="UsrFamily">
        select * from usr_family where usr_id = #{userId}
    </select>

    <select id="GetBreakDiet" parameterType="String" resultType="Recent_diet">
        select * from recent_diet where rd_usr = #{userId} and rd_type = 1
    </select>

    <select id="GetLunchDiet" parameterType="String" resultType="Recent_diet">
        select * from recent_diet where rd_usr = #{userId} and rd_type = 2
    </select>

    <select id="GetDinnerDiet" parameterType="String" resultType="Recent_diet">
        select * from recent_diet where rd_usr = #{userId} and rd_type = 3
    </select>

    <select id="GetRecipe" parameterType="long" resultType="Recipe">
        select * from recipe where rec_id = #{recipe_id}
    </select>

    <select id="GetWeight" parameterType="String" resultType="Integer">
        select usr_weight from weight where usr_id = #{userId}
    </select>

</mapper>

